<!DOCTYPE html>
<html>
  <head>
    <title>BookRecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="header">
      <div class="inner">
        <div class="nav">        
          <div class="nav__left">
            <%= link_to image_tag("logo.png", class: :logo), root_path %>            
          </div>                             
             <div class="nav__right"> 
               <%= link_to "ログアウト", root_path,  class: :nav__logout %>
               <%= link_to "Book Record", root_path,  class: :nav__btn %>                             
             </div>                                                    
            <div class="nav__right">
              <%= link_to "ログイン", root_path, class: :nav__btn %>
              <%= link_to "新規登録", root_path, class: :nav__btn %>
            </div>            
        </div>
      </div>
    </header>      
    <%= yield %>
    <footer class="footer">
      <p class="copyright"> © BOOK RECORD All rights reserved.</p>
    </footer>
  </body>
</html>
