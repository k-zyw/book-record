<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @book.title %>
      </p>
      <%= link_to "by" + @book.user.name, root_path, class: :prototype__user %>
      <% if user_signed_in? && current_user.id == @book.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_book_path, class: :prototype__btn %>
          <%= link_to "削除する", book_path, method: :delete, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @book.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">著者</p>
          <p class="detail__message">
            <%= @book.author %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">カテゴリー</p>
          <p class="detail__message">
            <%= @book.category.name %>
          </p>
        </div>        
        <div class="prototype__detail">
          <p class="detail__title">内容</p>
          <p class="detail__message">
            <%= @book.description %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
         <% if user_signed_in? %>
           <%= form_with model: [@book,@comment],local: true do |f|%>
            <div class="field">
              <%= f.label :content, "コメント" %><br />
              <%= f.text_field :content, id:"comment_content" %>
            </div>
            <div class="actions">
               <%= f.submit "送信する", class: :form__btn  %>
            </div>
           <% end %>
         <% end %>      
        <ul class="comments_lists">
          <li class="comments_list">
          <%= @comments.each do |comment| %>         
           <%= comment.content %>
           <%= link_to comment.user.name, root_path, class: :comment_user %>
          <% end %>
          </li>
        </ul> 
     </div>              
    </div>
  </div>
</main>