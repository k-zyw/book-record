<%= form_with model: @book, local: true do |f|%>
  <div class="field">
    <%= f.label :image, "本の画像" %><br />
    <%= f.file_field :image, id:"book_image" %>
  </div>
  <div class="field">
    <%= f.label :category_id, "カテゴリー" %><br />
    <%= f.collection_select(:category_id,  Category.all, :id, :name, {}, {class:"field", id:"book-category"}) %>
  </div>

  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, class: :form__text, id:"book_title" %>
  </div>

  <div class="field">
    <%= f.label :author, "著者" %><br />
    <%= f.text_field :author, class: :form__text, id:"book_author" %>
  </div>

  <div class="field">
    <%= f.label :description, "内容" %><br />
    <%= f.text_area :description, class: :form__text, id:"book_description" %>
  </div>

  

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn %>
  </div>
<% end %>